.tab-scoller {
  background: linear-gradient(to bottom, #2262fc, rgba(57, 134, 222, 0.84));
  height: 3rem;
  white-space: nowrap;
  display: flex;
}
/*取消移动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.active {
  background-color: #fff;
  color: #000 !important;
}

.tab-view {
  text-align: center;
  color: #fff;
  font-size: 1rem;
  height: 1.2rem;
  min-width:4rem;
  margin-top: 1rem;
  padding: 0 1%;
  border-right: 1px solid #fff;
  display: inline-block;
  line-height: 1.2rem;
}

.tab-text {
  display: block;
  bottom: 0.4rem;
  position: relative;
  height: 1.5rem;
  margin: 0 3%;
  border-radius: 0.5rem;
  padding: 0.3rem 0.3rem 0;
  color: #fff;
}